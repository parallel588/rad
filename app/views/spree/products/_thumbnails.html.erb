<%# no need for thumbnails unless there is more than one image %>
<% if (@product.images + @product.variant_images).uniq.size > 1 %>
  <ul id="product-thumbnails" class="list-unstyled row rad-thumbs thumbnails" data-hook>
    <% @product.images.each do |i| %>
      <li class='tmb-all tmb-<%= i.viewable.id %> col-xs-15'>
        <%= link_to(image_tag(i.attachment.url(:mini), class: "img-responsive grayscale"), i.attachment.url(:product)) %>
      </li>
    <% end %>

    <% if @product.has_variants? %>
      <% @product.variant_images.each do |i| %>
        <% next if @product.images.include?(i) %>
        <li class='vtmb tmb-<%= i.viewable.id %> col-xs-15'>
          <%= link_to(image_tag(i.attachment.url(:mini), class: "thumbnail img-responsive grayscale"), i.attachment.url(:product)) %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>